<% if @user.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <p>User update process failed due to:</p>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="header mt-4 mb-2">
  <h2> Parle-nous de toi...</h2>
</div>

<%= form_for @user do |f| %>
  <div class="form-group">
    <h6 class=text-info>Prénom</h6>
    <%= f.text_field :first_name, class: 'form-control', placeholder: 'Prénom'%></br>
    <h6 class=text-info>Nom</h6>
    <%= f.text_field :last_name, class: 'form-control', placeholder: 'Nom'%></br>
    <h6 class=text-info>Parle-nous de toi!</h6>
    <%= f.text_area :description, class: 'form-control', placeholder: 'Description'%></br>
  </div>
  <div class="form-group">
  <button type="submit" class="btn btn-secondary"> Enregistrer </button>
  </div>
<% end %>

