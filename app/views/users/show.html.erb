
<% if current_user.first_name == nil || current_user.last_name == nil ||  current_user.description == nil %>
</br><%= link_to "Compléter mon profil EventLike", edit_user_path, class: "btn-dark btn p-1" %>

<% else %>

<h1 class="mt-4">Espace de <%= @user.first_name %> <%= @user.last_name %></h1>
<p>
	<ul>
		<li> Prénom : <%= @user.first_name %></li>
		<li> Nom : <%= @user.last_name %></li>
		<li> Description : <%= @user.description %></li>
		<li> Email : <%= @user.email %></li>
	</ul>
</p>

<p>
	<%= link_to "Editer password / email", edit_user_registration_path, class: "btn-dark btn p-1" %>
	<%= link_to "Editer autres informations", edit_user_path, class: "btn-dark btn p-1" %>
</p>

<h3 class="mt-5">Evènements crées</h3>
<p>
<div class="row mt-4">	
  <% @user.events.each_with_index do |event, i| %>
  <div class="card mx-2 mb-3" style="width: 15rem">
	<div class="card-body">
	  <h5 class="card-title text-info"><%= event.title %></h5>
      <h6 class="card-subtitle mb-2 text-muted">Event n°<%= i+1 %></h6>	
      <p class="card-text text-muted"><%= event.start_date.strftime("%m/%d/%y") %></p>
	  <%= link_to "Page de l'Event", event_path(event.id), class: "btn-dark btn p-1" %>
	</div>
  </div>
  <% end %>
</div>
</p>

<% end %>
